{
  "name": "skill-testing-ml",
  "version": "0.2.0",
  "description": "Skill Testing Markup Language",
  "main": "index.js",
  "bin": {
    "skill-tester": "dist/bin/SkillTester.js"
  },
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist/bin/**/*.js",
    "dist/lib/**/*.js"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "silent": false,
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testResultsProcessor": "jest-junit",
    "verbose": true
  },
  "scripts": {
    "babel": "npm run babel.lib && npm run babel.test && npm run babel.bin",
    "babel.lib": "babel lib -d dist/lib",
    "babel.test": "babel test -D -d dist/test",
    "babel.bin": "babel bin -d dist/bin",
    "lint": "eslint --config .eslintrc.json bin lib test",
    "pretest": "npm run lint && npm run babel",
    "preversion": "npm test",
    "test": "jest --config jest-config-babel.json",
    "coverage": "codecov",
    "test.watch": "jest --watchAll"
  },
  "author": "John Kelvie",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.1",
    "cosmiconfig": "^4.0.0",
    "debug": "^3.1.0",
    "jest": "^22.4.3",
    "jest-message-util": "^22.4.3",
    "js-yaml": "^3.11.0",
    "jsonpath": "^1.0.0",
    "lodash": "^4.17.5",
    "virtual-alexa": "beta"
  },
  "devDependencies": {
    "alexa-sdk": "^1.0.25",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-block-scoping": "^6.26.0",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "codecov": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-jest": "^21.15.0",
    "eslint-plugin-sort-class-members": "^1.3.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-spellcheck": "0.0.10",
    "jest-junit": "^3.7.0"
  }
}
