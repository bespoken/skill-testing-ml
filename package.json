{
  "name": "skill-testing-ml",
  "version": "0.9.9",
  "description": "Skill Testing Markup Language",
  "main": "dist/lib/Index.js",
  "bin": {
    "skill-tester": "dist/bin/SkillTester.js"
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "dist/bin/**/*.js",
    "dist/lib/**/*.js"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "node"
    ],
    "silent": false,
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "testResultsProcessor": "jest-junit",
    "testURL": "http://localhost/",
    "verbose": true
  },
  "prettier": {
    "tabWidth": 4
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bespoken/skill-testing-ml.git"
  },
  "scripts": {
    "babel": "npm run babel.lib && npm run babel.test && npm run babel.bin",
    "babel.lib": "babel lib -d dist/lib",
    "babel.test": "babel test -D -d dist/test",
    "babel.bin": "babel bin -d dist/bin",
    "docs": "rm -rf docs/api && jsdoc -c jsdoc-conf.json",
    "lint": "eslint --config .eslintrc.json bin lib test",
    "lint.fix": "eslint --config .eslintrc.json --fix bin lib test",
    "pretest": "npm run lint",
    "preversion": "npm test && npm run test.babel && npm run docs",
    "test": "jest",
    "test.babel": "npm run babel && jest --config jest-config-babel.json",
    "test.smapi.1": "jest --runInBand test/SMAPI.test.js",
    "test.smapi.2": "jest --runInBand test/SMAPIInvoker.test.js",
    "coverage": "codecov",
    "test.watch": "jest --watchAll"
  },
  "author": "John Kelvie",
  "license": "ISC",
  "dependencies": {
    "chalk": "^2.4.1",
    "cosmiconfig": "^5.0.5",
    "debug": "^3.1.0",
    "jest": "^22.4.4",
    "jest-message-util": "^22.4.3",
    "jest-stare": "^1.11.2",
    "js-yaml-bespoken": "^3.11.5",
    "jsonpath-bespoken": "^1.0.1",
    "lodash": "^4.17.11",
    "virtual-alexa": "^0.7.2",
    "virtual-device-sdk": "^1.5.14",
    "virtual-google-assistant": "0.3.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "actions-on-google": "^2.2.0",
    "alexa-sdk": "^1.0.25",
    "ask-sdk-core": "^2.0.0",
    "ask-sdk-model": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-block-scoping": "^6.26.0",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "body-parser": "^1.18.3",
    "codecov": "^3.0.2",
    "dotenv": "^6.1.0",
    "eslint": "^4.19.1",
    "eslint-config-google": "^0.9.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-jest": "^21.15.2",
    "eslint-plugin-sort-class-members": "^1.3.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "eslint-plugin-spellcheck": "0.0.10",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.1",
    "firebase-functions": "^1.1.0",
    "jest-junit": "^3.7.0",
    "jsdoc": "^3.5.5",
    "nock": "^10.0.6",
    "sprintf-js": "^1.1.1"
  }
}
