{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "jest/globals": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "2017",
        "sourceType": "module"
    },
    "plugins": [
        "jest", "sort-class-members", "sort-requires", "spellcheck"
    ],
    "rules": {
        "no-console": "error",
        "quotes": ["error", "double"],
        "sort-class-members/sort-class-members": [2, {
            "order": [
                "[static-properties]",
                "[static-methods]",
                "[properties]",
                "[conventional-private-properties]",
                "constructor",
                "[methods]",
                "[conventional-private-methods]"
            ],
            "accessorPairPositioning": "getThenSet"
        }],
        "sort-keys": ["error", "asc", {"caseSensitive": true, "natural": false}],
        "sort-requires/sort-requires": 2,
        "spellcheck/spell-checker": [2,
            {
                "comments": true,
                "strings": true,
                "identifiers": true,
                "lang": "en_US",
                "skipWords": [
                    "alexa",
                    "chdir",
                    "cli",
                    "cosmiconfig",
                    "cwd",
                    "eslint",
                    "fn",
                    "fs",
                    "js",
                    "jsonpath",
                    "lodash",
                    "metadata",
                    "num",
                    "rc",
                    "runtime",
                    "ssml",
                    "stml",
                    "unhandled",
                    "usr",
                    "utf8",
                    "util",
                    "yaml",
                    "yml"
                ],
                "skipIfMatch": [
                    "http://[^s]*",
                    "https://[^s]*",
                    "^[-\\w]+\/[-\\w\\.]+$" //For MIME Types
                ]
            }
        ]

    }
}