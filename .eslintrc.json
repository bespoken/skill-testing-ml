{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "jest/globals": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": "2017",
        "sourceType": "module"
    },
    "plugins": [
        "jest", "sort-class-members", "sort-requires", "spellcheck"
    ],
    "rules": {
        "arrow-parens": ["error", "as-needed", { "requireForBlockBody": true }],
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "max-len": ["error", 200],
        "no-console": "error",
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "sort-class-members/sort-class-members": [2, {
            "order": [
                "[static-properties]",
                "[static-methods]",
                "[properties]",
                "[conventional-private-properties]",
                "constructor",
                "[methods]",
                "[conventional-private-methods]"
            ],
            "accessorPairPositioning": "getThenSet"
        }],
        "sort-keys": ["error", "asc", {"caseSensitive": true, "natural": false}],
        "sort-requires/sort-requires": 2,
        "spellcheck/spell-checker": [2,
            {
                "comments": true,
                "strings": true,
                "identifiers": true,
                "lang": "en_US",
                "skipWords": [
                    "amazonalexa",
                    "args",
                    "async",
                    "alexa",
                    "api",
                    "argv",
                    "aws",
                    "basename",
                    "bst",
                    "chdir",
                    "cli",
                    "cosmiconfig",
                    "cwd",
                    "dirname",
                    "dotenv",
                    "dto",
                    "eslint",
                    "filename",
                    "filepath",
                    "firebase",
                    "fn",
                    "fs",
                    "gif",
                    "globals",
                    "goto",
                    "homedir",
                    "hostname",
                    "html",
                    "http",
                    "https",
                    "invoker",
                    "js",
                    "jsonpath",
                    "lcov",
                    "lodash",
                    "lstat",
                    "metadata",
                    "nock",
                    "num",
                    "os",
                    "param",
                    "printf",
                    "rc",
                    "readdir",
                    "reprompt",
                    "rf",
                    "runtime",
                    "sdk",
                    "smapi",
                    "sms",
                    "ssml",
                    "stml",
                    "stdout",
                    "timestamp",
                    "txt",
                    "unhandled",
                    "unshift",
                    "usr",
                    "uniq",
                    "utf8",
                    "util",
                    "uuid",
                    "Veyor",
                    "winston",
                    "yaml",
                    "yml",
                    "stt",
                    "lng",
                    "witai",
                    "twilio",
                    "todo",
                    "ivr",
                    "whatsapp",
                    "req",
                    "res",
                    "webchat",
                    "Webchat"
                ],
                "skipIfMatch": [
                    "http://[^s]*",
                    "https://[^s]*",
                    "^[-\\w]+\/[-\\w\\.]+$"
                ]
            }
        ]

    }
}
